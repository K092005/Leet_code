class Solution {
public:
    int reverse(int x) {
        long long ans = 0; // Use long long to prevent overflow
        while (x != 0) {
            int digit = x % 10;
            ans = ans * 10 + digit;
            x /= 10;

            // Overflow check after computation
            if (ans > INT_MAX || ans < INT_MIN) return 0;
        }
        return static_cast<int>(ans);
    }
};
